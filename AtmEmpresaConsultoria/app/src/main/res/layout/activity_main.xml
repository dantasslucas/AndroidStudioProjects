<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="@dimen/default_pad"
    tools:context="atmempresaconsultoria.estudos.com.atmempresaconsultoria.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/img_empresaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="67dp"
        android:src="@drawable/menu_empresa" />

    <ImageView
        android:id="@+id/img_servicoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignTop="@+id/img_empresaId"
        android:src="@drawable/menu_servico" />

    <ImageView
        android:id="@+id/img_clienteId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_empresaId"
        android:layout_alignStart="@+id/img_empresaId"
        android:layout_below="@+id/img_empresaId"
        android:layout_marginTop="62dp"
        android:src="@drawable/menu_cliente" />

    <ImageView
        android:id="@+id/img_contatoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_servicoId"
        android:layout_alignStart="@+id/img_servicoId"
        android:layout_alignTop="@+id/img_clienteId"
        android:src="@drawable/menu_contato" />
</RelativeLayout>
